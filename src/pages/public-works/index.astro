---
import Layout from '../../layouts/Layout.astro';

// Content - edit this section to update your links
const sections = [
  {
    title: 'Newsletter',
    links: [
      { label: 'Strat Scraps on Substack', url: 'https://stratscraps.substack.com/' }
    ]
  },
  {
    title: 'Book',
    links: [
      { label: 'Read Online', url: 'https://view.publitas.com/thechopshop/theory-of-strategy-and-planning/page/1' },
      { label: 'Order Physical Copy', url: 'https://www.blurb.com/b/9009720-strategy-scrapbook' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { label: 'Curated Links & References', url: 'https://docs.google.com/document/d/1zcBnj6X6oLBHPobTg88B9KASCVKV1Nwguwzfop-UQPo/edit?usp=sharing' },
      { label: 'Original Works & Projects', url: 'https://docs.google.com/spreadsheets/d/1j3YWw1hat7ybolliCwo_GNOO3T0mN0DZ53Qqjt__5ac/edit?usp=sharing' }
    ]
  }
];
---

<Layout title="Public Works - Alex Morris" theme="dark">
  <a href="/" class="back-nav" style="color: #666;">‚Üê Home</a>

  <div class="logo-header">
    <a href="/"><img src="/logo-light.svg" alt="Strat Scraps" /></a>
  </div>

  <main style="padding-top: 6rem;">
    <header style="text-align: center; padding: 2rem;">
      <p class="nav-text" style="color: #666; margin-bottom: 1rem;">
        Resources &nbsp;&nbsp; Frameworks &nbsp;&nbsp; Writing
      </p>
      <h1 class="heading-primary">PUBLIC WORKS</h1>
      <p style="color: #888; max-width: 500px; margin: 1rem auto; line-height: 1.6;">
        Free resources, writing, and frameworks for strategists and creative thinkers.
      </p>
    </header>

    {sections.map((section) => (
      <section class="section">
        <h2 class="section-title">{section.title}</h2>
        <ul class="links-list">
          {section.links.map((link) => (
            <li>
              <a href={link.url} target="_blank" rel="noopener noreferrer">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </section>
    ))}
  </main>

  <a href="mailto:alex@stratscraps.com" class="contact-link" style="color: #666;">Contact</a>
</Layout>

<style>
  .logo-header {
    position: fixed;
    top: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
  }

  .logo-header img {
    width: 50px;
    height: auto;
  }
</style>
