---
import Layout from '../layouts/Layout.astro';
import homepageData from '../data/homepage.json';

const { siteTitle, logoAlt, publicWorks, privateWorks, contactEmail, contactLabel } = homepageData;
---

<Layout title={siteTitle} theme="split">
  <div class="split-container">
    <!-- Left Side - Public Works (Dark) -->
    <a href={publicWorks.link} class="split-side split-side--dark">
      <div class="content-wrapper">
        <p class="nav-text" style="color: #666; margin-bottom: 1.5rem;">
          {publicWorks.subtitle}
        </p>
        <h1 class="heading-primary">{publicWorks.heading}</h1>
      </div>
    </a>

    <!-- Center Logo -->
    <div class="logo-center">
      <div class="logo-badge">
        <img src="/logo-dark.svg" alt={logoAlt} />
      </div>
    </div>

    <!-- Right Side - Private Works (Light) -->
    <a href={privateWorks.link} class="split-side split-side--light">
      <div class="content-wrapper">
        <p class="nav-text" style="color: #666; margin-bottom: 1.5rem;">
          {privateWorks.subtitle}
        </p>
        <h1 class="heading-primary">{privateWorks.heading}</h1>
      </div>
    </a>
  </div>

  <a href={`mailto:${contactEmail}`} class="contact-link">{contactLabel}</a>
</Layout>

<style>
  .logo-badge {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.15);
  }

  .logo-badge img {
    width: 50px;
    height: auto;
  }
</style>
